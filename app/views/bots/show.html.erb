<% content_for :title, "Showing bot" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl"> <%= @bot.name %> </h1>

  <%= turbo_stream_from @bot, :chat %>

  <div class="h-[60vh] w-full flex flex-col"> 
    <div class="h-full w-full flex flex-col" id="chat-messages"> 

    </div>
    <div class="h-40 w-full" id="chat-form">
      <%= render "chat_form", bot: @bot %>
    </div>
  </div>


  <div class="mt-4">
    <%= link_to "Edit this bot", edit_bot_path(@bot), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Back to bots", bots_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Destroy this bot", @bot, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
